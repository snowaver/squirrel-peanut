<?xml  version="1.0"  encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"  android:orientation="vertical"  android:layout_width="match_parent"  android:layout_height="match_parent">

    <TextView  style="@style/Widget.AppCompat.Button.Borderless"  android:layout_width="match_parent"  android:layout_height="50dp"  android:paddingLeft="10dp"  android:textColor="@color/darkgray"  android:textSize="18dp"  android:text="@string/select"  android:gravity="center_vertical"  android:background="@color/white"/>

    <View  android:layout_width="match_parent"  android:layout_height="1px"  android:background="@color/gainsboro"/>

    <ListView  android:id="@+id/contact_groups"  android:layout_width="match_parent"  android:layout_height="200dp"  android:dividerHeight="1px"  android:divider="@color/lightgray"  android:background="@color/white"></ListView>

    <View  android:layout_width="match_parent"  android:layout_height="1px"  android:background="@color/gainsboro"/>

    <RelativeLayout  android:layout_width="match_parent"  android:layout_height="50dp"  android:paddingRight="10dp"  android:background="@color/white">

        <TextView  android:id="@+id/add_to_new_group_button"  android:layout_width="wrap_content"  android:layout_height="wrap_content"  android:layout_alignParentRight="true"  android:layout_centerVertical="true"  android:text="@string/contact_add_to_new_group"  android:textColor="@color/limegreen"  android:textSize="18dp"/>

    </RelativeLayout>

</LinearLayout>