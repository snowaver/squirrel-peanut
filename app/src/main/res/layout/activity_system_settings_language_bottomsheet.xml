<?xml  version="1.0"  encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"  android:orientation="vertical"  android:layout_width="match_parent"  android:layout_height="match_parent"  android:background="@color/white">

    <TextView  android:id="@+id/title"  style="@style/Widget.AppCompat.Button.Borderless"  android:layout_width="match_parent"  android:layout_height="50dp"  android:paddingLeft="10dp"  android:textColor="@color/darkgray"  android:textSize="18dp"  android:text="@string/language_select"  android:gravity="center_vertical"  android:background="@color/white"/>

    <View  android:layout_width="match_parent"  android:layout_height="1px"  android:background="@color/gainsboro"/>

    <ListView  android:id="@+id/languages"  android:layout_width="match_parent"  android:layout_height="250dp"  android:dividerHeight="1px"  android:divider="@color/lightgray"></ListView>

</LinearLayout>