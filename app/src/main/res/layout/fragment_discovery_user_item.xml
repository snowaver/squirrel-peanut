<?xml  version="1.0"  encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"  xmlns:app="http://schemas.android.com/apk/res-auto"  android:layout_width="match_parent"  android:layout_height="50dp"  android:orientation="horizontal"  android:background="@color/white"  android:paddingLeft="10dp"  android:paddingTop="5dp"  android:paddingBottom="5dp"  android:paddingRight="10dp">

    <com.facebook.drawee.view.SimpleDraweeView  android:id="@+id/portrait"  android:layout_width="40dp"  android:layout_height="40dp"  app:placeholderImage="@drawable/placeholder"  app:roundAsCircle="true"  app:roundedCornerRadius="20dp"/>

    <TextView  android:id="@+id/nickname"  android:layout_width="0dp"  android:layout_height="wrap_content"  android:layout_weight="1"  android:layout_marginLeft="10dp"  android:layout_marginRight="10dp"  android:layout_gravity="center_vertical"  android:textColor="@color/darkgray"  android:textSize="14dp"/>

    <ImageView  android:id="@+id/add_contact_button"  android:layout_width="40dp"  android:layout_height="40dp"  android:src="@drawable/more"  android:scaleType="fitCenter"/>

</LinearLayout>